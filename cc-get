args = {...}

source = "https://raw.githubusercontent.com/ThePhoenix47/cc-get/master/packages/"


function table.contains(table, element)
    for _, value in pairs(table) do
        if value == element then
            return true
        end
    end
    return false
end
function loadPkg(name)
	pkgRoot = source .. name .. "/"
	pkg = textutils.unserialize(http.get(pkgRoot .. "package.inf").readAll())
	if not pkg[2] == nil then
		print("Loading package " .. name .. "...")
		for _, value in pairs(pkg[2]) do
			print("Getting: " .. value)
			f = fs.open("/bin/cc-get/packages/" .. name .. "/" .. value, "w")
			f.write(http.get(pkgRoot .. value).readAll())
			f.close()
		end
	end
	if not pkg[3] == nil then
	end

	v = fs.open("/bin/cc-get/packages/" .. name .. "/version", "w")
	v.write(pkg[1])
	v.close()
end

if args[1] == "install" then
	packages = textutils.unserialize(http.get(source .. "packages.list").readAll())
	if table.contains(packages, args[2]) then
		loadPkg(args[2])
	end
elseif args[1] == "remove" then
	inst = fs.list("/bin/cc-get/packages")
	if table.contains(inst, args[2]) then
		fs.delete("/bin/cc-get/packages/" .. args[2])
	else
		print("No such package!")
	end
elseif args[1] == "upgrade" then
	FileList = fs.list("/bin/cc-get/packages")
	for _, file in ipairs(FileList) do
		if fs.isDir("/bin/cc-get/packages/" .. file) then
			r = fs.open("/bin/cc-get/packages/" .. file .. "/version", "r")
  			local installedVersion = r.readAll()
  			pkg = textutils.unserialize(http.get(source .. file .. "/package.inf"))
  			local newestVersion =  pkg[1]
  			if installedVersion < newestVersion then
  				fs.delete("/bin/cc-get/packages/" .. name .. "/*")
  				fs.delete("/bin/cc-get/packages/" .. name .. "/lib")
  			end
  		end
	end
elseif args[1] == "installed" then
	print("Installed packages:")
	FileList = fs.list("/bin/cc-get/packages")
	for _, file in ipairs(FileList) do
		if fs.isDir("/bin/cc-get/packages/" .. file) then
  			print(file)
  		end
	end
elseif args[1] == "setpath" then
	shell.setPath(shell.path() .. ":/bin/cc-get/")

	FileList = fs.list("/bin/cc-get/packages")
	for _, file in ipairs(FileList) do
		if fs.isDir("/bin/cc-get/packages/" .. file) then
			shell.setPath(shell.path() .. ":/bin/cc-get/packages/".. file)
  		end
	end
elseif args[1] == "help" then
	print("Help for CC-GET")
	print("======================")
	print("install 'package' - installs 'package'")
	print("remove 'package' - removes 'package'")
	print("upgrade - upgrades all packages to the newest version")
	print("          This CC-GET has super cow powers!")
else
	print("***Unknown Command!")
end